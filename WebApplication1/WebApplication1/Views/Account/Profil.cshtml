@model WebApplication1.ViewModel.UserViewModel
@{
    ViewBag.Title = "Mon profil joueur";
}

<h2>Profil du joueur</h2>

<div>
    <hr />
    @using (Html.BeginForm("Profil", "Account", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Pseudo)

            @Html.TextBoxFor(m => m.Pseudo, new { @readonly = "readonly", @class = "form-control" })
        </div>

         <div class="form-group">
             @Html.LabelFor(m => m.Mail)

             @Html.TextBoxFor(m => m.Mail,  new { @class = "form-control" } )
             @Html.ValidationMessageFor(m => m.Mail)
         </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Adresse)

            @Html.TextBoxFor(m => m.Adresse, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Adresse)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CodePostale)

            @Html.TextBoxFor(m => m.CodePostale, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CodePostale)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nom)

            @Html.TextBoxFor(m => m.Nom, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nom)
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.Prenom)

            @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Prenom)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)

           @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.VerifPassword)

            @Html.PasswordFor(m => m.VerifPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.VerifPassword)
        </div>
        <div class="form-group">
            <input type="submit" value="Modifier" class="btn"/>
        </div>
        
    }
     
    @if (ViewBag.Sucess != null)
    {
        <span style="color:red">@ViewBag.Sucess</span>
    }
    
       
    
    <dl class="dl-horizontal">
    </dl>
</div>
